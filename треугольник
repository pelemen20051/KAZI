using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Security.Policy;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace WindowsFormsApp4
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }
        
        private void btnDetermine_Click(object sender, EventArgs e)
        {
            // Получение длины сторон из текстовых полей
            if (double.TryParse(txtSide1.Text, out double side1) &&
                double.TryParse(txtSide2.Text, out double side2) &&
                double.TryParse(txtSide3.Text, out double side3))
            {
                // Определение типа треугольника
                string triangleType = GetTriangleType(side1, side2, side3);
                lblResult.Text = $"Тип треугольника: {triangleType}";
            }
            else
            {
                MessageBox.Show("Пожалуйста, введите корректные значения для всех сторон.");
            }
            
        }
        private string GetTriangleType(double side1, double side2, double side3)
        {
            // Проверка на существование треугольника
            if (side1 <= 0 || side2 <= 0 || side3 <= 0)
                return "Некорректные значения";

            if (side1 == side2 && side2 == side3)
                return "равносторонний";
            else if (side1 == side2 || side1 == side3 || side2 == side3)
                return "равнобедренный";
            else
                return "разносторонний";
        }

        private void btnClear_Click(object sender, EventArgs e)
        {
            // Очистка текстовых полей и результата
            txtSide1.Clear();
            txtSide2.Clear();
            txtSide3.Clear();
            lblResult.Text = ""; // Очистка текста результата
        }

       
        

        
        
    }
}
